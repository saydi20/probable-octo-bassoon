<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenidos"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:text="Esta es la aplicacion de Registro al congreso de Informática, selecciona una opción por favor"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />


    <Button
        android:id="@+id/btnasistente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="asistente"
        android:text="Ingresar asistente"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp" />

    <Button
        android:id="@+id/btnexpositor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="expositor"
        android:text="Ingresar  expositor"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"/>

</LinearLayout>

